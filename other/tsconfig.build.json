{
	"include": ["../src/**/*.ts"],
	"compilerOptions": {
		"isolatedModules": true,
		"esModuleInterop": true,
		"module": "ES2022",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"target": "ES2022",
		"strict": true,
		"allowJs": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"outDir": "../dist",
		"declaration": true
	}
}
